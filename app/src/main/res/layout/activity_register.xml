<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#0D0C22"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo tài khoản mới để bắt đầu"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

        <!-- Họ tên -->
        <EditText
            android:id="@+id/fullNameEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập họ và tên của bạn"
            android:background="@drawable/edit_text_bg"
            android:paddingStart="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập địa chỉ email"
            android:background="@drawable/edit_text_bg"
            android:paddingStart="12dp"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="12dp" />

        <!-- Mật khẩu -->
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Tạo mật khẩu"
            android:background="@drawable/edit_text_bg"
            android:paddingStart="12dp"
            android:inputType="textPassword"
            android:layout_marginBottom="12dp" />

        <!-- Xác nhận mật khẩu -->
        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Xác nhận lại mật khẩu"
            android:background="@drawable/edit_text_bg"
            android:paddingStart="12dp"
            android:inputType="textPassword"
            android:layout_marginBottom="20dp" />

        <!-- Nút đăng ký -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Đăng ký"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0066FF"
            android:layout_marginBottom="16dp"/>

        <!-- Hoặc đăng ký với -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoặc đăng ký với"
            android:textColor="#999999"
            android:gravity="center"
            android:layout_marginVertical="12dp" />

        <!-- Google -->
        <Button
            android:id="@+id/googleSignUpButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Tiếp tục với Google"
            android:drawableStart="@drawable/ic_google"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Facebook -->
        <Button
            android:id="@+id/facebookSignUpButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Tiếp tục với Facebook"
            android:drawableStart="@drawable/ic_facebook"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Apple -->
        <Button
            android:id="@+id/appleSignUpButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Tiếp tục với Apple"
            android:drawableStart="@drawable/ic_apple"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- Đã có tài khoản -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã có tài khoản? "
                android:textColor="#666666" />

            <TextView
                android:id="@+id/loginTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:textColor="#0066FF"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
